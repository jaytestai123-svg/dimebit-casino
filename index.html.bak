  <script>
    // Capture UTM parameters and store in cookies
    function getParameterByName(name) {
      var url = window.location.href;
      name = name.replace(/[\[\]]/g, '\\$&');
      var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
          results = regex.exec(url);
      if (!results) return null;
      if (!results[2]) return '';
      return decodeURIComponent(results[2].replace(/\+/g, ' '));
    }

    // Store UTM parameters in cookies
    function storeUtmParameters() {
      var utmParams = ['utm_source', 'utm_medium', 'utm_campaign', 'utm_term', 'utm_content'];
      utmParams.forEach(function(param) {
        var value = getParameterByName(param);
        if (value) {
          document.cookie = param + '=' + value + ';path=/;max-age=2592000'; // 30 days
        }
      });
      // Also store referrer if available
      if (document.referrer) {
        document.cookie = 'referrer=' + document.referrer + ';path=/;max-age=2592000';
      }
    }
    
    // Run on page load
    window.addEventListener('DOMContentLoaded', storeUtmParameters);
